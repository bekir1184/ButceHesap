<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentSayfalar.AnaSayfaFrag.Ayarlat">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="Bulunduğunuz ay içerisindeki harcamaları ve gelirleri yıllık planda saklamak , yenı aya baslamak istiyor musun ? "
            android:fontFamily="@font/madelina"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/evet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evet"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_margin="10dp"
                android:background="@drawable/selected_button"
                android:textSize="25dp"
                android:fontFamily="@font/madelina"
            />
            <Button
                android:id="@+id/hayir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hayir"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_margin="10dp"
                android:background="@drawable/selected_button"
                android:textSize="25dp"
                android:fontFamily="@font/madelina"
                />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>