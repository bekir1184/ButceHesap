<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <com.github.mikephil.charting.charts.BarChart
        android:layout_below="@+id/card"
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        >
        <TextView
            android:id="@+id/ayAdi"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ay adi"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:fontFamily="@font/madelina"
            />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_shopping_cart_black_24dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Market"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />
                    <TextView
                        android:id="@+id/marketToplam"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5500"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_directions_car_black_24dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Akaryakit"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />
                    <TextView
                        android:id="@+id/akaryakitToplam"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5500"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_content_cut_black_24dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giyim"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />
                    <TextView
                        android:id="@+id/giyimToplam"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5500"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_assignment_black_24dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fatura"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />
                    <TextView
                        android:id="@+id/faturaToplam"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5500"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_content_paste_black_24dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diger (Gider)"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />
                    <TextView
                        android:id="@+id/giderDigerToplam"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5500"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_attach_money_black_24dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maas"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />
                    <TextView
                        android:id="@+id/maasToplam"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5500"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_content_paste_black_24dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diger(Gelir)"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />
                    <TextView
                        android:id="@+id/gelirDigerToplam"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5500"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:fontFamily="@font/madelina"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>





</RelativeLayout>